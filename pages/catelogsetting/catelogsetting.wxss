/* pages/catelogsetting/catelogsetting.wxss */
.container{
  height: calc(100vh);
}
.item {
  height: 44px;
  padding: 8px 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2px solid rgb(251, 252, 251);
}

.item image {
  width: 30px;
  height: 30px;
}

.item text {
  padding-left: 25px;
}

.swiper {
  height: calc(100vh - 100px);
  padding: 50px 0;
}

.swiper-item {
  overflow: auto;
}

.none {
  left: 23%;
  bottom: 55%;
  z-index: 999;
  position: fixed;
  font-size: 33rpx;
  color: #ccc;
}

.menu {
  background-color: #FDD835;
  padding: 10px;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 0;
  width: 95%;
  z-index: 999;
}

.top-menu {
  margin: 0 auto;
  text-align: center;
  color: #333;
}

.menu text{
  padding: 0 26px;
  display: inline-block;
  color: #fff;
}

.top-menu-out{
  border: 1px solid #fff;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

.top-menu-in{
  border: 1px solid #fff;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}

.bgw {
  background: #fff !important;
  color: #FDD835 !important;
}

.add-catalog{
  text-align: center;
  line-height: 50px;
  position: fixed;
  left: 0;
  bottom: 0;
  width: calc(100vw);
  background: rgb(240,240,240);
  font-size: 14px;
  color: rgb(130, 130, 130);
}
.opr{
  position: absolute;
  right: 10px;
  top: 14px;
  font-size: 14px;
  display: inline-block;
  height: 30px;
  color: #fff;
}
.red {
  width: 4px;
  height: 4px;
  padding: 6px;
  border-radius: 100%;
  background-color: #FDD835;
  box-shadow: 3px 3px 3px #ccc;
}

.item-main{
  display: flex;
  align-items: center;
}