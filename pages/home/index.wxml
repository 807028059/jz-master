<!-- 首页 -->
<view class="container">
	<!-- 首页纵览 -->
	<view class="info">
		<view class="today">
			<text>今日净额：{{todaymoney}}</text>
		</view>
		<view class="in_out">
			<text>收入：{{in}}</text>
			<text>支出：{{out}}</text>
		</view>
		<image src="/images/home/images.jpeg"></image>
	</view>

	<view class="imageSize" hidden="{{hiddenName}}"><image mode="aspectFit" src="/images/noData.jpg" class="van-card__img in-image"></image></view>



    <block wx:key="item" wx:for="{{list}}">
      <view data-index='{{index}}' class="order-item" bindtouchstart="drawStart" bindtouchmove="drawMove" 
      bindtouchend="drawEnd" style="right:{{item.right}}rpx">
        
        <van-card centered="true"  price="{{item.money}}" desc="{{item.date}}" title="{{item.notes}}" thumb="{{item.url}}">
            <view class="footer" slot="footer"></view>
	      </van-card>

        <view id="{{item.id}}" class="remove" bindtap="delItem">删除</view>
     </view>
    </block>

</view>