/* pages/addcatalog/addcatalog.wxss */

.save-btn {
  background: #F4D03F;
  color: #fff;
}

.btn-group {
  padding: 20px;
}

.name {
  display: flex;
  background: #fff;
  padding: 0 20px;
}

.name text {
  height: 40px;
  line-height: 40px;
  padding-right: 10px;
}

.name input {
  height: 40px;
}

.divide {
  height: 20px;
  /* background-color: rgb(251, 251, 242); */
}

.icon-title {
  text-align: center;
  font-size: 12px;
  color: rgb(190, 190, 190);
  padding: 14px 0;
}

.icon-img{
  width: 20px;
  height: 20px;
  padding: 6px;
  border-radius: 100%;
}

.icon-wrapper{
  display: inline-block;
  padding: 13px;
}

.icons{
  padding: 10px;
}
.blue {
  background-color: #ccc;
}

.red {
  background-color: #F4D03F;
}

.menu {
  background-color: #FDD835;
  padding: 10px;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 0;
  width: 95%;
  z-index: 999;
}

.top-menu {
  margin: 0 auto;
  text-align: center;
  color: #333;
}

.menu text{
  padding: 0 26px;
  display: inline-block;
  color: #fff;
}

.top-menu-out{
  border: 1px solid #fff;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

.top-menu-in{
  border: 1px solid #fff;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}

.bgw {
  background: #fff !important;
  color: #FDD835 !important;
}
